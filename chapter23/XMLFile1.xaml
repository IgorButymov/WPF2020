<?xml version="1.0" encoding="utf-8" ?> 
<StackPanel xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"    
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">     <!-- адрес файла объявляющего требуемое пространство имен, стэк-панель -->     
<ScrollBar Name="scroll" Orientation="Horizontal" Margin="24" Maximum="100" LargeChange="10"  SmallChange="1" />     <!-- скролл-бар, его параметры. -->    
 <Label HorizontalAlignment="Center"> <!--элемент управления Label, расположен в центре-->
   <Label.Content>     <!-- содержимое Label-->     
     <Binding ElementName="scroll"  Path="Value" />   <!-- привязка -->  
     </Label.Content>    <!-- конец содержимого Label-->
  </Label> <!-- конец Label-->
</StackPanel>  <!-- конец стэк-панели-->

